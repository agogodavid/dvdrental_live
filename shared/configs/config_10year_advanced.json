{
  "mysql": {
    "host": "localhost",
    "user": "root",
    "password": "root",
    "database": "dvdrental_10year_advanced"
  },
  "simulation": {
    "start_date": "2001-12-30",
    "initial_weeks": 520
  },
  "generation": {
    "films_count": 500,
    "stores_count": 3,
    "initial_customers": 100,
    "weekly_new_customers": 15,
    "base_weekly_transactions": 400,
    "customer_segments": {
      "super_loyal": {
        "percentage": 0.10,
        "churn_rate": 0.05,
        "activity_multiplier": 3.0,
        "lifetime_weeks": 200
      },
      "loyal": {
        "percentage": 0.20,
        "churn_rate": 0.15,
        "activity_multiplier": 2.0,
        "lifetime_weeks": 100
      },
      "average": {
        "percentage": 0.30,
        "churn_rate": 0.40,
        "activity_multiplier": 1.0,
        "lifetime_weeks": 50
      },
      "occasional": {
        "percentage": 0.40,
        "churn_rate": 0.80,
        "activity_multiplier": 0.3,
        "lifetime_weeks": 20
      }
    },
    "business_lifecycle": {
      "growth_phase_weeks": 104,
      "plateau_phase_weeks": 208,
      "decline_phase_weeks": 104,
      "reactivation_phase_weeks": 104
    },
    "volume_modifiers": {
      "growth_factor": 0.025,
      "plateau_factor": 0.000,
      "decline_factor": -0.005,
      "reactivation_factor": 0.015
    },
    "reactivation": {
      "enable_reactivation": true,
      "reactivation_probability": 0.25,
      "reactivation_start_week": 416,
      "reactivation_duration_weeks": 104
    },
    "plateau": {
      "start_week": 104,
      "duration_weeks": 208,
      "plateau_multiplier": 1.0,
      "seasonal_volatility": 0.1
    },
    "rental_duration_min": 2,
    "rental_duration_max": 10,
    "spike_day_probability": 0.08,
    "spike_day_multiplier": 3,
    "rental_distribution": {
      "enabled": true,
      "type": "power_law",
      "alpha": 1.0,
      "description": "Power law (Zipfian) distribution for film rental frequency. alpha=1.0 creates 80/20 pattern where top 20% of films get 80% of rentals. Increase alpha (e.g., 1.5) for more extreme distribution."
    },
    "new_movie_boost": {
      "enabled": true,
      "days_to_boost": 40,
      "boost_factor": 3.0,
      "boost_percentage": 10,
      "description": "New movie boost: only the top boost_percentage of new films (by film_id) released within days_to_boost get a weight multiplier (boost_factor). This reflects reality where not all new releases are equally popular. Example: 40% means ~40% of new films get 2x boost for 40 days, then linearly decay. Others follow normal power law immediately."
    },
    "advanced_features": {
      "enable_late_fees": true,
      "enable_ar_tracking": true,
      "enable_inventory_status_tracking": true,
      "enable_seasonality": true,
      "enable_customer_churn": true,
      "late_fees": {
        "daily_rate": 1.50,
        "calculation_frequency_days": 1,
        "overdue_threshold_days": 0
      },
      "seasonality": {
        "winter_months": [11, 12, 1],
        "winter_multiplier": 1.25,
        "spring_months": [3, 4, 5],
        "spring_multiplier": 1.10,
        "summer_months": [6, 7, 8],
        "summer_multiplier": 1.30,
        "fall_months": [9, 10],
        "fall_multiplier": 1.15,
        "volatility": 0.05
      },
      "inventory_status": {
        "damage_probability": 0.02,
        "loss_probability": 0.01,
        "maintenance_frequency": 0.03
      },
      "customer_behavior": {
        "overdue_rental_probability": 0.08,
        "max_simultaneous_rentals": {
          "super_loyal": 10,
          "loyal": 6,
          "average": 4,
          "occasional": 2
        }
      }
    },
    "performance": {
      "batch_size": 1000,
      "commit_frequency": 5000,
      "disable_autocommit": true,
      "use_prepared_statements": true,
      "enable_bulk_inserts": true
    }
  },
  "master_simulation": {
    "total_weeks": 520,
    "start_date": "2001-10-01",
    "film_release_strategy": {
      "_explanation": "TWO-PHASE STRATEGY: (1) Market releases every week represent films available in the market, (2) Hot category purchases on specific weeks represent selective purchasing decisions",
      "market_weekly_releases": 20,
      "market_weekly_releases_description": "Films released to market each week (added to film_releases table but NOT inventory). 20/week * 520 weeks = 10,400 market releases over 10 years",
      "purchased_from_market_strategy": "hot_categories",
      "purchased_from_market_description": "Selective purchasing from market based on hot_categories schedule - these represent purchasing decisions and are added to inventory",
      "hot_category_rotation_weeks": 12,
      "hot_categories": [
        {"weeks": [0, 12, 24, 36, 48], "category": "Action", "priority": "high", "inventory_boost": 1.5, "purchase_per_release": 5, "note": "5 Action films purchased when this category is hot"},
        {"weeks": [4, 16, 28, 40], "category": "Comedy", "priority": "medium", "inventory_boost": 1.2, "purchase_per_release": 4, "note": "4 Comedy films purchased when this category is hot"},
        {"weeks": [8, 20, 32, 44], "category": "Drama", "priority": "medium", "inventory_boost": 1.2, "purchase_per_release": 5, "note": "5 Drama films purchased when this category is hot"}
      ]
    }
  },
  "inventory_purchasing": {
    "strategy": "aggressive",
    "aggressive": {
      "description": "Aggressive inventory growth across all genres",
      "inventory_per_film": [8, 12],
      "diversification_factor": 1.0
    },
    "stable": {
      "description": "Stable inventory growth with balanced genre distribution",
      "inventory_per_film": [5, 8],
      "diversification_factor": 0.8
    },
    "seasonal": {
      "description": "Stable growth focused on seasonally appropriate genres",
      "inventory_per_film": [4, 7],
      "diversification_factor": 0.3,
      "seasonal_preferences": {
        "Q1": ["Drama", "Romance", "Comedy"],
        "Q2": ["Action", "Sci-Fi", "Adventure"],
        "Q3": ["Horror", "Thriller", "Action"],
        "Q4": ["Family", "Animation", "Comedy"]
      }
    }
  }
